      <div class="left">
        {% for blogpost in blogposts %}
          {{ include ('partials/blogpost.html.twig')}}
        {% endfor %}
      </div>
    </div>
      </div>
      <div class="right">
        <ul>
      {% for category in categories %}
        <li><a class="link {{loop.first ? 'active' : ''}}" href="#category{{category.id}}" data-toggle="tab">{{category.name}}</a></li>
      {% endfor %}
    	</ul>
      </div>
      <div class="clr"></div>
